<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базова тема додатку -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Background color. -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>

        <!-- Error color. -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Текстові кольори -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <!-- Стиль для карток тренувань -->
    <style name="WorkoutCard" >
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>


    <!-- Стилі кнопок -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="Theme.GayFit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Додайте інші необхідні стилі -->
    </style>
</resources>
